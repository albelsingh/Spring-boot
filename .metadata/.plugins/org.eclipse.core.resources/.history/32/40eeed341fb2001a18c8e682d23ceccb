package com.telusko.springmvc.dao;
import java.util.Collection;
import java.util.List;

import javax.persistence.Tuple;
import javax.transaction.Transactional;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;
import com.telusko.springmvc.model.Alien;

@Component
public class AlienDao {
	
	@Autowired
	private SessionFactory sessionFactory;
	
	@Transactional
	public List<Alien> getAliens()
	{
		Session session=sessionFactory.getCurrentSession();
		List<Alien> aliens=(List<Alien>)session.createQuery("select a from Alien a", Alien.class).list();//session.createQuery("from Alien",Alien.class).list();
		return aliens;
	}
}
